{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["lib-shared/src/*"],
      "@types/*": ["lib-shared/src/types/*"],
      "@events/*": ["lib-shared/src/events/*"],
      "@utils/*": ["lib-shared/src/utils/*"]
    }
  },
  "include": [
    "lib-shared/src/**/*",
    "svc-*/src/**/*",
    "webapp-dashboard/src/**/*",
    "infra-migrations/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "./lib-shared" },
    { "path": "./svc-api" },
    { "path": "./svc-auth" },
    { "path": "./svc-orchestrator" },
    { "path": "./svc-qualifier" },
    { "path": "./svc-engagement" },
    { "path": "./svc-followup" },
    { "path": "./svc-closer" },
    { "path": "./svc-analytics" },
    { "path": "./svc-scheduler" },
    { "path": "./webapp-dashboard" },
    { "path": "./infra-migrations" }
  ]
}
