generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  firstName String
  lastName  String
  role      UserRole @default(AGENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  assignedLeads Lead[]
  @@map("users")
}

model Lead {
  id        String   @id @default(cuid())
  status    LeadStatus @default(NEW)
  source    LeadSource
  priority  LeadPriority @default(MEDIUM)
  
  // Contact info
  firstName String
  lastName  String
  email     String
  phone     String?
  company   String?
  jobTitle  String?
  
  // Property info
  propertyType String?
  priceMin     Float?
  priceMax     Float?
  currency     String? @default("USD")
  city         String?
  state        String?
  country      String?
  
  // Qualification
  qualificationScore Int     @default(0)
  aiConfidence      Float   @default(0.0)
  assignedTo        String?
  tags              String[]
  notes             String[]
  
  // Follow-up
  nextFollowUp DateTime?
  cadence      String?
  
  // Metadata
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("leads")
}

enum UserRole {
  ADMIN
  MANAGER
  AGENT
}

enum LeadStatus {
  NEW
  QUALIFIED
  ENGAGED
  FOLLOW_UP
  NEGOTIATION
  CLOSED_WON
  CLOSED_LOST
  DISQUALIFIED
}

enum LeadSource {
  WEBSITE
  COLD_CALL
  REFERRAL
  SOCIAL_MEDIA
  EMAIL_CAMPAIGN
  TRADE_SHOW
  PARTNER
  OTHER
}

enum LeadPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
